<resources>
    <style name="HeaderText" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/orangeAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LabelText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="OrangeButton" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/orangeAccent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
